      std::endl;<br>
      return 0;<br>
      }<br>
      }<br>
      // Should never reach here!<br>
      return 0;<br>
      bc::ec_secret random_secret(std::default_random_engine&amp; engine)<br>
      {<br>
      // Create new secret...<br>
      bc::ec_secret secret;<br>
